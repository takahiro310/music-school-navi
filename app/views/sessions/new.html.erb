<div class="container">
  <h3 class="page-title">ログイン</h3>
  <% if flash[:danger] %>
    <p><%= flash[:danger] %></p>
  <% end %>
<%= form_for(:session, url: login_path, :html => {:class => "needs-validation", :novalidate => "novalidate" }) do |f| %>
  <div class="row">
    <div class="col-md-12 mb-3">
      <label for="email">メールアドレス</label>
      <%= f.email_field :email, :class => "form-control", :placeholder => "example@example.com", required: true %>
      <div class="invalid-feedback">
        メールアドレスを入力してください
      </div>
    </div>
    <div class="col-md-12 mb-3">
      <label for="email">パスワード</label>
      <%= f.password_field :password, :class => "form-control", required: true %>
      <div class="invalid-feedback">
        パスワードを入力してください
      </div>
    </div>
  </div>
  <%= f.submit "ログイン", :class => "btn btn-primary btn-lg btn-block" %>
  <hr class="mb-4">
  <%= link_to 'Twitterアカウントでログイン', '/auth/twitter', :class => "btn btn-primary btn-lg btn-block" %>
<% end %>
</div>
